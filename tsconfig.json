{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es5",
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "baseUrl": ".",
        "paths": {
            "checkout/*": ["./src/app/*", "./src/locale/*"]
        },
        "pretty": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*", "./types/**/*"]
}
